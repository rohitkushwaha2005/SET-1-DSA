#include <iostream>
using namespace std;

// Function to print right triangle pattern
void printRightTriangle(int rows) {
    for (int i = 1; i <= rows; i++) {
        // Print stars in each row
        for (int j = 1; j <= i; j++) {
            cout << "*";
        }
        // Move to the next line after printing stars for each row
        cout << endl;
    }
}

int main() {
    int rows;

    // Input the number of rows from the user
    cout << "Enter the number of rows: ";
    cin >> rows;

    // Call the function to print the right triangle pattern
    printRightTriangle(rows);

    return 0;
}
